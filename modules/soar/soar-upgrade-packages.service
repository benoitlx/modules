[Unit]
Description=Auto-upgrade 'soar' packages
Wants=network-online.target
After=network-online.target

[Service]
Type=oneshot
ExecCondition=/usr/bin/bash -c 'if ps aux | grep -v grep | grep -E -q "/usr/sbin/soar|/usr/bin/soar"; then exit 1; else exit 0; fi'
ExecStart=/usr/bin/soar -c /usr/share/bluebuild/soar/config.toml update